<script>
    import { gsap } from "gsap";

    // Initial Reveal
    gsap.to(".reveal-stagger", {
        y: 0,
        opacity: 1,
        duration: 0.8,
        stagger: 0.1,
        ease: "power2.out",
        delay: 0.2,
    });

    gsap.to(".main-donut", {
        scale: 1,
        opacity: 1,
        duration: 1,
        ease: "elastic.out(1, 0.75)",
        delay: 0.5,
    });

    gsap.to([".floating-element-1", ".floating-element-2"], {
        opacity: 1,
        duration: 0.5,
        delay: 1,
    });

    // Continuous Floating Animation + Rotation
    gsap.to(".main-donut", {
        y: -15,
        rotation: 360,
        duration: 8,
        repeat: -1,
        ease: "none",
    });

    // Separate floating animation
    gsap.to(".main-donut", {
        y: "-=15",
        duration: 3,
        repeat: -1,
        yoyo: true,
        ease: "sine.inOut",
    });

    gsap.to(".floating-element-1", {
        y: -10,
        x: 5,
        duration: 4,
        repeat: -1,
        yoyo: true,
        ease: "sine.inOut",
        delay: 0.5,
    });

    gsap.to(".floating-element-2", {
        y: 10,
        x: -5,
        duration: 5,
        repeat: -1,
        yoyo: true,
        ease: "sine.inOut",
        delay: 1,
    });
</script>
