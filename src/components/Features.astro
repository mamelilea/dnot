<style>
    /* Light mode: gray to chocolate */
    .reveal-text .text-content {
        background: linear-gradient(to right, #451a03 50%, #a89080 50%);
        background-size: 200% 100%;
        background-position: 100% 0;
        -webkit-background-clip: text;
        background-clip: text;
        -webkit-text-fill-color: transparent;
        transition: background-position 0.1s ease-out;
    }

    /* Dark mode: gray to white */
    :global(.dark) .reveal-text .text-content {
        background: linear-gradient(to right, #ffffff 50%, #666666 50%);
        background-size: 200% 100%;
        background-position: 100% 0;
        -webkit-background-clip: text;
        background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .reveal-text-sub {
        opacity: 0.3;
        transition: opacity 0.3s ease-out;
    }

    .reveal-text-sub.revealed {
        opacity: 0.9;
    }
</style>

<script>
    // === Scroll-based Text Reveal ===
    function setupTextReveal() {
        const revealItems = document.querySelectorAll(".reveal-item");

        function updateReveal() {
            revealItems.forEach((item) => {
                const textEl = item.querySelector(
                    ".reveal-text .text-content",
                ) as HTMLElement;
                const subEl = item.querySelector(".reveal-text-sub");

                if (!textEl) return;

                const rect = item.getBoundingClientRect();
                const windowHeight = window.innerHeight;

                // Start revealing when element is 80% from top, complete when at 30% from top
                const startPoint = windowHeight * 0.8;
                const endPoint = windowHeight * 0.3;

                let progress = 0;

                if (rect.top < startPoint) {
                    progress = Math.min(
                        1,
                        Math.max(
                            0,
                            (startPoint - rect.top) / (startPoint - endPoint),
                        ),
                    );
                }

                // Apply the reveal effect
                // background-position: 100% 0 (gray) -> 0% 0 (black/white)
                const bgPosition = 100 - progress * 100;
                textEl.style.backgroundPosition = `${bgPosition}% 0`;

                // Reveal subtitle
                if (subEl) {
                    if (progress > 0.5) {
                        subEl.classList.add("revealed");
                    } else {
                        subEl.classList.remove("revealed");
                    }
                }
            });
        }

        // Update on scroll
        window.addEventListener("scroll", updateReveal, { passive: true });

        // Initial check
        updateReveal();
    }

    // Initialize
    document.addEventListener("DOMContentLoaded", setupTextReveal);

    // Also run on load in case DOMContentLoaded already fired
    if (
        document.readyState === "complete" ||
        document.readyState === "interactive"
    ) {
        setupTextReveal();
    }
</script>
